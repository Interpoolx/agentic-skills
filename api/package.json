{
    "name": "agentic-skills-api",
    "version": "1.0.0",
    "description": "Agentic Skills Registry API - Cloudflare Worker with Hono and D1",
    "type": "module",
    "scripts": {
        "dev": "wrangler dev",
        "deploy": "wrangler deploy",
        "db:migrate": "wrangler d1 execute agentic-skills-db --file=./schema.sql",
        "db:migrate:local": "wrangler d1 execute agentic-skills-db --local --file=./schema.sql",
        "db:schema:push": "drizzle-kit push",
        "db:export:local": "node scripts/export-local-db.js",
        "db:pull": "node scripts/d1.cjs pull",
        "db:push": "node scripts/d1.cjs push",
        "db:backup": "node scripts/d1.cjs backup --local",
        "db:backup:remote": "node scripts/d1.cjs backup --remote",
        "db:restore": "node scripts/d1.cjs restore",
        "db:pull:schema": "node scripts/d1.cjs pull --schema-only",
        "db:pull:data": "node scripts/d1.cjs pull --data-only",
        "db:push:schema": "node scripts/d1.cjs push --schema-only",
        "db:push:data": "node scripts/d1.cjs push --data-only"
    },
    "dependencies": {
        "@types/uuid": "^10.0.0",
        "drizzle-orm": "^0.31.0",
        "gray-matter": "^4.0.3",
        "hono": "^4.4.0",
        "uuid": "^13.0.0",
        "zod": "^4.3.5"
    },
    "devDependencies": {
        "@cloudflare/workers-types": "^4.20240529.0",
        "@types/better-sqlite3": "^7.6.13",
        "better-sqlite3": "^12.6.2",
        "drizzle-kit": "^0.22.8",
        "typescript": "^5.5.0",
        "wrangler": "^3.60.0"
    }
}